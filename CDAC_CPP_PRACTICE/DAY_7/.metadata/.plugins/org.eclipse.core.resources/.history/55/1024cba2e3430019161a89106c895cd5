#include<iostream>
#include<string>

using namespace std;

class Date
{
private:
	int day;
	int month;
	int year;
public:
	Date(void)
	{
		this->day=0;
		this->month=0;
		this->year=0;
	}

	Date(int day,int month,int year):day(day),month(month),year(year)
	{}

	void AcceptRecord(void)
	{
		cout<<"Day	:	";
		cin>>this->day;
		cout<<"Month	:";
		cin>>this->month;
		cout<<"Year	:	";
		cin>>this->year;
	}

	void EnteredRecord(void)
	{
		cout<<this->day<<"/"<<this->month<<"/"<<this->year<<endl;
	}

};

