#include<iostream>
#include<string>

class Date
{
private:
	int day;
	int month;
	int year;
public:
	Date(void)
	{
		this->day=0;
		this->month=0;
		this->year=0;
	}

	Date(int day,int month,int year):day(day),month(month),year(year)
	{}

	void AcceptRecord(void)
	{
		cout<<"Day	:	"<<this->day;
		cout<<"Month	:	"<<this->month;
		cout<<"Year	:	"<<this->year;

	}

};
